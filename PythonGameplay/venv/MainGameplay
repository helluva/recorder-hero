from tkinter import *
import time

tk = Tk()
cvWidth = 500
cvHeight = 700
cv = Canvas(tk, width=cvWidth, height=cvHeight)
tk.title("Recorder Hero")
tk.resizable(False, False)
cv.pack()

#eventually this will be the tempo fo the song obtained from somewhere else
songSpeed = 0.01
#this should be a list of lists of tuples of vertical finger placement coordinates
fingerPositions = []
#below is test for now, eventially I will instantiate this list with every column of finger placement tuples as a list in the list

#4 Test finger positions for now
#initial X position off of the canvas, Y will be hardcoded constant for each ball Ex: (cvWidth + 50, 150)
fingerPositions = [[(10, 150), (), (10, 300), ()], [(100, 150), (), (), ()]]
#fingerPositions.append([()])


def tempDisplay(canvas, fingerPositions, songSpeed):
    for i in range(0, len(fingerPositions)):
        for ballCoord in fingerPositions[i]:
            if (ballCoord != ()):
                ball = cv.create_oval(ballCoord[0], ballCoord[1], ballCoord[0] + 60, ballCoord[1] + 60, fill='black')
                # ySpeed is 0 since only moving left
        while(True):
            #every move is one pixel left at a time so smooth movement
            canvas.move(ball, -1, 0)
            canvas.update()
            time.sleep(songSpeed)

            pos = canvas.coords(ball)
            #if the right xPos is beyond left edge of page...
            if (pos[2] < 0):
                break;


tempDisplay(cv, fingerPositions, songSpeed)
tk.mainloop()